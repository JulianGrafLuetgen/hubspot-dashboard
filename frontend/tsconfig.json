{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "files": [],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "types": ["nuxt"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  },
  "include": [
    "types/**/*.d.ts",
    "app/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.vue"
  ]
}
